<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    >

    <LinearLayout

        android:id="@+id/left_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_tumpul"
        android:backgroundTint="@color/Putih_Hitam_Chat"
        android:padding="8dp"
        android:layout_marginEnd="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/Hitam_Putih"
            android:textSize="18sp"
            android:id="@+id/text_left_chat"/>
</LinearLayout>
    <LinearLayout
        android:id="@+id/right_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/edit_text_tumpul"
        android:backgroundTint="@color/yellow"
        android:layout_alignParentEnd="true"
        android:padding="8dp"
        android:layout_marginStart="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:textColor="@color/Hitam_Putih"
            android:textSize="18sp"
            android:id="@+id/right_text_chat"/>
    </LinearLayout>
</RelativeLayout>